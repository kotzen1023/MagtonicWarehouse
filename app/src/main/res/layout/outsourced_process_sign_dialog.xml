<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/textViewOutsourcedProcessDialogMsg"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:textSize="@dimen/text_size_25"
            android:text="@string/outsourced_process_dialog_msg"
            android:gravity="center"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/textViewOutsourcedProcessSendOrderHeader"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_size_25"
                    android:layout_weight="2"
                    android:text="@string/outsourced_process_dialog_send_no_header"/>

            <TextView
                    android:id="@+id/textViewOutsourcedProcessSendOrderContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_size_25"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
        </LinearLayout>
        <View
                android:id="@+id/viewLine"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="0"
                android:background="#b7b7b7" />
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textViewOutsourcedProcessWorkOrderHeader"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_25"
                        android:layout_weight="2"
                        android:text="@string/outsourced_process_dialog_work_order_header"/>

                <TextView
                        android:id="@+id/textViewOutsourcedProcessWorkOrderContent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_25"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
            </LinearLayout>
        </ScrollView>



    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

        <Button
                android:id="@+id/btnDialogCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_30"
                android:text="@string/cancel"/>

        <Button
                android:id="@+id/btnDialogConfirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_30"/>

    </LinearLayout>

</LinearLayout>