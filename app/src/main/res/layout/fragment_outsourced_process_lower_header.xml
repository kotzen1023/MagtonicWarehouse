<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_width="fill_parent">

    <TextView android:text="料號/品名"
            android:id="@+id/outSourcedProcessLowerItemDetailHeaderHeaderHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/text_size_25"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:layout_weight="1">
    </TextView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <TextView android:text= "應發"
                android:id="@+id/outSourcedProcessLowerItemDetailContentStaticHeaderHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_30"
                android:gravity="center"

                android:layout_weight="1">
        </TextView>

        <TextView android:text= "實發"
                android:id="@+id/outSourcedProcessLowerItemDetailContentDynamicHeaderHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_30"
                android:gravity="center"
                android:layout_weight="1">
        </TextView>
    </LinearLayout>
</LinearLayout>