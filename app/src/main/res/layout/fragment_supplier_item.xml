<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content" android:orientation="horizontal" android:layout_width="fill_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <TextView android:text="header"
                android:id="@+id/supplierItemHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_30"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:layout_weight="2"
                android:minHeight="60dp">
        </TextView>

        <TextView android:text="content"
                android:id="@+id/supplierItemHContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_30"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:minHeight="60dp">
        </TextView>

    </LinearLayout>
</LinearLayout>