<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="120dp" android:orientation="horizontal" android:layout_width="fill_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

        <TextView android:text="guestNo"
                android:id="@+id/guestItemDetailData2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/text_size_30"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_weight="1">
        </TextView>

        <TextView android:text="guestTime"
                android:id="@+id/guestItemDetailData34"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_30"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_weight="1">
        </TextView>
    </LinearLayout>



    <Button
            android:id="@+id/receiptItemDetailBtnLeave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="@dimen/text_size_30"
            android:text="@string/btn_guest_leave"/>





</LinearLayout>